<div id="block-user-login" class="block block-user block-odd first last clearfix">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { id:'user-login-form',class: 'form-item form-type-textfield form-item-name'}) do |f| %>
  <div><%= f.label :email, "Имя пользователя"%><br />
  <%= f.email_field :email,  :autofocus => true %></div>

  <div class="form-item form-type-password form-item-pass"><%= f.label :password, "Пароль"  %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
<div class="form-actions form-wrapper" id="edit-actions">
  <%= f.submit "Войти", id:'edit-submit', class: 'form-submit' %>
</div>
<% end %>

<%= render "devise/shared/links" %>
</div>



